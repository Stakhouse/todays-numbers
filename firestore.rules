rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email in [
               'admin@todaysnumbers.com',
               // The environment variable can't be used directly in rules
               // Add more admin emails here as needed
             ];
    }
    
    // Ad submissions collection - only admins can read/write
    match /ads/{document} {
      allow read, write: if isAdmin();
    }
    
    // Users collection - only admins can read/write
    match /users/{document} {
      allow read, write: if isAdmin();
    }
    
    // Island data collection - only admins can write, public can read
    match /islands/{document} {
      allow read: if true; // Public can read island data
      allow write: if isAdmin(); // Only admins can modify
    }
    
    // Audit logs - only admins can read/write
    match /audit_logs/{document} {
      allow read, write: if isAdmin();
    }
    
    // Lottery results - only admins can write, public can read
    match /lottery_results/{document} {
      allow read: if true; // Public can read lottery results
      allow write: if isAdmin(); // Only admins can add/update
    }
    
    // Sports scores - only admins can write, public can read
    match /sports_scores/{document} {
      allow read: if true; // Public can read sports scores
      allow write: if isAdmin(); // Only admins can add/update
    }
    
    // Commodity prices - only admins can write, public can read
    match /commodity_prices/{document} {
      allow read: if true; // Public can read commodity prices
      allow write: if isAdmin(); // Only admins can add/update
    }
    
    // Hotel rates - only admins can write, public can read
    match /hotel_rates/{document} {
      allow read: if true; // Public can read hotel rates
      allow write: if isAdmin(); // Only admins can add/update
    }
    
    // Events - only admins can write, public can read
    match /events/{document} {
      allow read: if true; // Public can read events
      allow write: if isAdmin(); // Only admins can add/update
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
